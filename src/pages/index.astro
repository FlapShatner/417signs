---
import Layout from '../layouts/Layout.astro'
import '@fontsource/material-symbols-outlined'
---

<Layout title='Welcome to Astro.'>
 <main>
  <h1 class='mt-12'>
   Future home of <br />
   <span>417 Signs</span>
  </h1>
  <div class='w-full flex justify-center'>
   <span class='material-symbols-outlined'> construction </span>
  </div>
 </main>
</Layout>

<style>
 main {
  margin: auto;
  padding: 1rem;
  width: 800px;
  max-width: calc(100% - 2rem);
  color: white;
  font-size: 20px;
  line-height: 1.6;
 }

 h1 {
  font-size: 4rem;
  font-weight: 700;
  line-height: 1;
  text-align: center;
  margin-bottom: 1em;
 }
 .material-symbols-outlined {
  font-family: 'Material Symbols Outlined';
  font-weight: normal;
  font-style: normal;
  font-size: 250px; /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;
 }
</style>
